<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D3D3">

    <!-- App Title -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UniHostelPro"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <!-- Sub Title -->
    <TextView
        android:id="@+id/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPEN UNIVERSITY OF SRI LANKA"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_below="@id/appTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <!-- Hostel Image -->
    <ImageView
        android:id="@+id/hostelIcon"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/subTitle"
        android:layout_marginTop="40dp"
        android:src="@drawable/download"
        android:contentDescription="hostel icon"
        android:scaleType="fitCenter" />

    <!-- Go to Login Button -->
    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_below="@id/hostelIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_margin="16dp"
        android:backgroundTint="#6A3A39"
        android:textColor="#FFFFFF" />

    <!-- Website Link at the Bottom -->
    <TextView
        android:id="@+id/websiteLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.unihostelpro.lk"
        android:textColor="#0000FF"
        android:textStyle="bold"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Login Link at the Top Left -->
    <TextView
        android:id="@+id/loginLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Login"
        android:textColor="#0000FF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:focusable="true" />

</RelativeLayout>
