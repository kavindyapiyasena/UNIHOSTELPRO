<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAF2F8"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Payment Details Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:padding="10dp"/>

        <!-- âœ… Dynamic Details (data from AddPaymentActivity) -->
        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details will appear here"
            android:textSize="16sp"
            android:textColor="#333333"
            android:padding="8dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <!-- Credit Card Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credit Card"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <!-- Small card icons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ccccc"
                    android:layout_marginEnd="8dp"/>

                <!-- White background placeholder instead of cccc -->
                <View
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="#FFFFFF"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/visa"/>
            </LinearLayout>

            <!-- Main card image -->
            <ImageView
                android:id="@+id/ivGiftCard"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/blackcard"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"/>

            <!-- Add New Card Link -->
            <TextView
                android:id="@+id/tvAddNewCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add new card"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Other Payment Options -->
        <Button
            android:id="@+id/btnApplePay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apple Pay"
            android:layout_marginTop="12dp"
            android:backgroundTint="#6A1B9A"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnDebitCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Debit Card"
            android:layout_marginTop="12dp"
            android:backgroundTint="#6A1B9A"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnNetBanking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Net Banking"
            android:layout_marginTop="12dp"
            android:backgroundTint="#6A1B9A"
            android:textColor="#FFFFFF"/>

        <!-- Send receipt -->
        <CheckBox
            android:id="@+id/cbSendReceipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send receipt to your email"
            android:layout_marginTop="15dp"/>

        <!-- Pay Now -->
        <Button
            android:id="@+id/btnPayNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay Now"
            android:backgroundTint="#1A237E"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>
